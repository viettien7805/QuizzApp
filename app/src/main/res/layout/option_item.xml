<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginBottom="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/option_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/option_bg_default"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/option_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_default"
            android:layout_marginEnd="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/option_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Answer Content"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/text_default"
            android:textAlignment="center" />

        <FrameLayout
            android:id="@+id/selection_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_empty"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/checkmark"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                app:tint="@color/text_selected"
                android:contentDescription="selected" />
        </FrameLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>