<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/btn_back_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/abc_ic_ab_back_material"
        app:tint="#5C4F6F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cài đặt"
        android:textColor="#5C4F6F"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_back_settings"
        app:layout_constraintStart_toEndOf="@id/btn_back_settings"
        app:layout_constraintTop_toTopOf="@id/btn_back_settings"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:id="@+id/card_go_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/card_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_settings_title">

        <ImageView
            android:id="@+id/img_avatar_summary"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_male"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Người Dùng"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chạm để chỉnh sửa hồ sơ"
                android:textSize="14sp"
                android:textColor="#888888"/>
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_play"
            app:tint="#CCCCCC"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_options_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="10dp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/card_go_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thông báo"
                android:textSize="16sp"
                android:textColor="#555555"
                android:textStyle="bold"/>
            <Switch
                android:id="@+id/sw_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#6497EF"
                android:trackTint="#AECBFA"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

        <LinearLayout
            android:id="@+id/btn_change_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đổi mật khẩu"
                android:textSize="16sp"
                android:textColor="#555555"
                android:textStyle="bold"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

        <LinearLayout
            android:id="@+id/btn_support_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Liên hệ hỗ trợ"
                android:textSize="16sp"
                android:textColor="#555555"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_final_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="24dp"
        android:text="Đăng xuất"
        android:textColor="#D73737"
        android:textStyle="bold"
        app:backgroundTint="#FFE5E5"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>