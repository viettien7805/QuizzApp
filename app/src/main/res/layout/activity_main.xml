<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6FF">

    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_header_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cardDailyTask"
        android:layout_marginBottom="-20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatarMain"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/avatar_male"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/imgAvatarMain"
        app:layout_constraintEnd_toStartOf="@id/layoutScore"
        app:layout_constraintStart_toEndOf="@id/imgAvatarMain"
        app:layout_constraintTop_toTopOf="@id/imgAvatarMain">

        <TextView
            android:id="@+id/tvUserNameMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào, Việt Tiến"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hôm nay bạn muốn học gì?"
            android:textColor="#CCFFFFFF"
            android:fontFamily="@font/poppins"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/score_background_pill"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="@id/imgAvatarMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgAvatarMain">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_icon"
            app:tint="#FFD700" />

        <TextView
            android:id="@+id/tvTotalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDailyTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/imgAvatarMain">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/lblDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhiệm vụ hàng ngày"
                android:textSize="16sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textColor="#2D3436"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvDailyProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/3"
                android:textSize="16sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textColor="#6C5CE7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ProgressBar
                android:id="@+id/pbDailyTask"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="16dp"
                android:max="3"
                android:progress="1"
                android:progressDrawable="@drawable/custom_progress_bar"
                app:layout_constraintTop_toBottomOf="@id/lblDaily"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Hoàn thành để nhận +50 xu"
                android:textSize="13sp"
                android:fontFamily="@font/poppins"
                android:textColor="#636E72"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pbDailyTask"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@id/cardDailyTask">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAiQuiz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_gradient_purple"
            android:text="Tạo Quiz AI"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_magic_wand"
            android:drawableTint="#FFFFFF"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"
            android:elevation="6dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateManual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_gradient_orange"
            android:text="Thủ công"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_edit"
            android:drawableTint="#FFFFFF"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"
            android:elevation="6dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lblMoreGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="Khám phá bài thi"
        android:textColor="#2D3436"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutActions"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/lblMoreGames"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="20dp"
        app:menu="@menu/bottom_nav_menu_modern"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/purple_500"
        app:itemTextColor="@color/purple_500"
        app:itemTextAppearanceActive="@style/BottomNavText"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>